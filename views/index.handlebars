 
  <div class="navigation">
        <nav>
            <ul class="nav nav-pills" style="padding-top:5px;">
                <li class="nav-item">
                    <a class="nav-link disabled" style="margin-right:15px; font-size:1.3rem;">Mongo Scraper</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/saved">Saved Articles</a>
                </li>               
                <li class="nav-item">
                    <button type="button" class="btn btn-danger btnScrape" href="/scrape">Scrape New Articles</button>
                </li>
            </ul>
        </nav>
    </div>
    <div class="hero">
        <div class="jumbotron jumbotron-fluid" style="background-image: url('./images/newspaper.jpg'); " >
            <div class="container center">
                <div>
                    <h1 class="display-4 hero-text forward">Mongo Scraper</h1>
                    <p class="lead hero-text forward">National Public Radio Edition</p>
                </div>
            </div>
        </div>
    </div>
    {{#each Articles}}
    <div class="card" id={{this._id}}>
        <div class="card-header" style="background-color: #2f7df6; color: white;">
            {{this.subCategory}}
        </div>
        <div class="card-body">
            <div class="info">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.summary}}</p>
                <span><a href="{{this.link}}">Full Article</a></span><br>
                <form action="/saved/{{this._id}}" method="POST">
                <a type="button" class="btn btn-primary">Save Article</a>
                </form>
            </div>
            <div class="image img-thumbnail">
                <img src="{{this.img}}" width=200px height=200px>
            </div>  
        </div>
    </div>
    {{/each}}